<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title @raw="title ?? site.title" webc:keep></title>

		<link rel="stylesheet" href="css/reset.css" />
		<link rel="stylesheet" href="css/fonts.css" />
		<link rel="stylesheet" href="css/base.css" />
		<link rel="stylesheet" href="css/layout.flow.css" />
		<style @raw="getBundle('css')" webc:keep></style>
		<script @raw="getBundle('js')" webc:keep></script>
	</head>
	<body>
		<page-layout-header>
			<page-logo @text="site.title"></page-logo>
			<page-navigation></page-navigation>
		</page-layout-header>

		<main class="container">
			<div class="flow flow-space-xl">
				<template @raw="content" webc:nokeep></template>
			</div>
		</main>

		<page-layout-footer>
			<span
				@text="`Â© 2023â€“${(new Date()).getFullYear()} ${site.author}`"
			></span>
			<a :href="`mailto:${site.email}`">Email</a>
		</page-layout-footer>

		<style @raw="getBundle('css', 'defer')" webc:keep></style>
		<script @raw="getBundle('js', 'defer')" webc:keep></script>
	</body>
</html>
